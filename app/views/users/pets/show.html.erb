<div class="container">
  <div class="row align-items-center justify-content-between">
    <div class="col-md-8">
      <h2><%= @pet.name %>の詳細画面</h2>
    </div>
  </div>

  <div class="row align-items-center justify-content-between mb-4">
    <div class="col-md-5">
      <div class="pet-img">
        <%= image_tag @pet.get_pet_image(200,200) %>
      </div>
    </div>
    <div class="col-md-6">
      <table class="a">
        <tr>
          <td>名前：</td>
          <td><%= @pet.name %></td>
        </tr>
        <tr>
          <td>種類：</td>
          <td><%= @pet.kind %></td>
        </tr>
        <tr>
          <td>性別：</td>
          <td><%= @pet.sex_i18n %></td>
        </tr>
        <tr>
          <td>誕生日：</td>
          <td><%= l @pet.birthday, format: :day %></td>
        </tr>
        <tr>
          <td>うちに来た日：</td>
          <td><%= l @pet.came_day, format: :day %></td>
        </tr>
        <tr>
          <td>メモ：</td>
          <td><%= @pet.memo %></td>
        </tr>
      </table>
      <%= link_to '編集', edit_pet_path(@pet.id), class: "btn text-white btn-simple mt-2" %>
      <span class="mr-5"></span>
      <%= link_to '削除', pet_path(@pet.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: 'btn text-white btn-attention mt-2' %>
    </div>
  </div>

  <div class="row align-items-center justify-content-between">
    <div class="col-md-8">
      <%= link_to "体重・全長管理", new_pet_body_info_path(@pet), class: 'btn btn-custom2 mr-3' %>
      <%= link_to "食事管理", pet_meals_path(@pet), class: 'btn btn-custom2 mr-3' %>
      <%= link_to "その他の記録", pet_cares_path(@pet), class: 'btn btn-custom2 mr-3' %>
    </div>
  </div>
</div>

