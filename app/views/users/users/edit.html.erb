<div class="container">
  <div class="row align-items-center justify-content-between">
    <div class="col-md-6">
      <h2>ユーザー情報編集</h2>

      <% if current_user.email == 'guest@example.com' %>
        ゲストアカウントは編集・退会できません。
        <%= link_to "マイページに戻る", my_page_path(current_user), class: 'btn text-white btn-simple mt-4' %>
      <% else %>
        <%= form_with model: @user, url: user_update_path do |f| %>
          <div class="field">
            <%= f.label :name, "ユーザー名" %><br>
            <%= f.text_field :name %>
          </div>

          <div class="field">
            <%= f.label :email, "メールアドレス" %><br>
            <%= f.text_field :email %>
          </div>

          <div class="actions mt-3">
            <%= f.submit "保存" %>
          </div>
        <% end %>

        <%= link_to "退会", user_unsubscribe_path, class: 'btn text-white btn-attention mt-4' %>
      <% end %>
    </div>
  </div>
</div>
