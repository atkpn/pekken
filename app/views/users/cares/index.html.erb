<div class="container">
  <div class="row align-items-center justify-content-between">
    <div class="col-md-8">
      <div class="page_title">
        <h2><%= @pet.name %>のお手入れ項目一覧</h2>
      </div>
    </div>
  </div>
</div>

<div class="container mb-4">
  <div class="row align-items-center justify-content-between">
    <div class="col-md-8">
      <%= link_to "+ 項目を追加する", new_pet_care_path(pet_id: @pet.id), class: "btn" %>
    </div>
  </div>
</div>

<section class="mb-4">
  <div class="container">
    <div class="row align-items-center justify-content-between">
      <div class="col-md-10">
        <table class="table table-borderless">
          <tr>
            <th>項目名</th>
            <th></th>
            <th></th>
          </tr>
          <% @care.each do |care| %>
          <tr>
            <td><%= care.care_item.name %></td>
            <td><%= link_to "詳細", pet_care_pet_cares_path(pet_id: @pet.id, care_id: care.id), class: "btn text-white btn-simple" %></td>
            <td><%= link_to "削除", pet_care_path(pet_id: @pet.id, id: care.id), method: :delete, "data-confirm" => "項目を削除すると記録が消えてしまう場合があります。\n本当に削除しますか？", class: 'btn text-white btn-attention' %></td>
          </tr>
          <% end %>
        </table>
      </div>
      <div class="col-md-10 btn-pet-show">
        <%= link_to pet_path(@pet.id), class: 'btn btn-custom2' do %>
          <%= @pet.name %>の詳細画面に戻る
        <% end %>
      </div>
    </div>
  </div>
</section>