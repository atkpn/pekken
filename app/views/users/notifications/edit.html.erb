<div class="container">
  <div class="row align-items-center justify-content-between">
    <div class="col-md-8">
      <h2>通知編集</h2>

      <%= form_with model: @notification, url: notification_path, method: :patch do |f| %>
        <div class="field">
          <%= f.label :due_date, "通知したい日時" %><br>
          <%= f.datetime_select :due_date, {default: Time.zone.now, minute_step: 15} %>
        </div>

        <div class="field">
          <%= f.label :task, "通知内容" %><br>
          <%= f.text_field :task %>
        </div>

        <div class="actions mt-3">
          <%= f.submit "変更を保存" %>
        </div>
      <% end %>
    </div>
  </div>
</div>