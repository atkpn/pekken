<h1><%= @pet.name %>の食事管理一覧</h1>

<%= link_to "新規記録", new_pet_meal_path(@pet) %>

<table>
  <tr>
    <th>日時</th>
    <th>総摂取カロリー(kcal)</th>
  </tr>
  <% @meals.each do |meal| %>
  <tr>
    <td>
      <%= link_to pet_meal_path(@pet, meal.datetime) do %>
        <%= meal.datetime.strftime('%Y/%m/%d') %>
      <% end %>
    </td>
    <td>
      <%= meal.calorie %>kcal
    </td>

  </tr>
  <% end %>
</table>
