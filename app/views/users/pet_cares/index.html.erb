<h1><%= @pet.name %>の<%= @care.care_item.name %>の記録一覧</h1>

<%= link_to "新規記録", new_pet_care_pet_care_path(pet_id: @pet.id, care_id: @care.id) %>

<table>
  <tr>
    <th>日時</th>
    <th>値</th>
    <th>メモ</th>
    <th></th>
    <th></th>
  </tr>
  <% @pet_care.each do |pet_care| %>
  <tr>
    <td><%= pet_care.date_time.strftime('%Y/%m/%d %-H:%M') %></td>
    <td><%= pet_care.value %></td>
    <td><%= pet_care.memo %></td>
    <td><%= link_to "修正", edit_pet_care_pet_care_path(pet_id: @pet.id, care_id: @care.id, id: pet_care.id) %></td>
    <td><%= link_to "削除", pet_care_pet_care_path(pet_id: @pet.id, care_id: @care.id, id: pet_care.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
  </tr>
  <% end %>
</table>
