<h1>ユーザー一覧</h1>

<table>
  <tr>
    <th>ユーザーID</th>
    <th>ユーザー名</th>
    <th>メールアドレス</th>
    <th>ステータス</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= link_to user.name, admin_user_path(user.id) %></td>
      <td><%= user.email %></td>
      <td>
        <% if user.is_deleted == false %>
          <p class="text-success">有効</p>
        <% else %>
          <p class="text-muted">退会</p>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
